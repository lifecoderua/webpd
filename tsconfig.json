{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    
    "moduleResolution": "node",
    "lib": ["es5", "es2015.promise", "dom"],

    "outDir": "dist",
    "rootDir": "src",
    "declaration": false,
    "importHelpers": true,
    "inlineSourceMap": true,
    "pretty": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**"
  ],
  "compileOnSave": true
}